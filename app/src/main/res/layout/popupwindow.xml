<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wx_msg_window"
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:background="#000000">

    <ImageView
        android:id="@+id/wx_logo"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/weixin"/>

    <TextView
        android:id="@+id/wx_msg_usrname"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/wx_logo"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp"/>



    <Button
        android:id="@+id/button_cancel"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/wx_msg_usrname"
        android:background="@drawable/button"/>

    <View
        android:id="@+id/view_line_bar"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/linebar"
        android:layout_below="@id/wx_msg_usrname"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/wx_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line_bar"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textSize="12dp"/>



</RelativeLayout>
